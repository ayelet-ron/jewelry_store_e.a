@model Tuple<List<Jewelry_Store_e.a.Models.Product>,bool>
@{
    ViewData["Title"] = "Home";
}
<br />
<h1>Catalog</h1>
<hr />
<!DOCTYPE html>
<html>
<title>W3.CSS Template</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<body class="w3-content" style="max-width:1200px">

    <!-- Overlay effect when opening sidebar on small screens -->
    <div class="w3-overlay w3-hide-large" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

    <!-- !PAGE CONTENT! -->
    <!-- Push down content on small screens -->
    <div class="w3-hide-large" style="margin-top:83px"></div>



    <!-- Image header -->
    <div class="w3-display-container w3-container">
        <img src="~/images/stars and moon necklace.jpg" alt="Jeans" style="width:800px;height:360px">
        <div class="w3-display-topleft w3-text-white" style="padding:30px 90px">
            <h1 class="w3-jumbo w3-hide-small">New arrivals</h1>
            <h1 class="w3-hide-large w3-hide-medium">New arrivals</h1>
            <h1 class="w3-hide-small">COLLECTION 2019</h1>
            <p><a class=" w3-black w3-padding-large w3-large">SHOP NOW</a></p>
        </div>
    </div>

    @if (Model.Item2)
    {
        <h2>Because you liked</h2>
    }
    else
    {
        <h2>Start buying to get some recommendations...</h2>
    }

    <div class="w3-row">

        <!-- Product grid -->
        @foreach (var item in Model.Item1)
        {
            <div class="w3-col l3 s6">
                <div class="w3-container">
                    <div class="w3-display-container">
                        <img src="~/images/@Html.DisplayFor(modelItem => item.Image)" style="width:150px;height:150px">
                        @if (item.Sale)
                        {
                            <span class="w3-tag w3-display-topleft">Sale</span>
                        }
                        else
                        {
                            <span class="w3-tag w3-display-topleft">New</span>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="w3-display-middle w3-display-hover">
                                <button type="button" class="w3-button w3-black" onclick="location.href='@Url.Action("AddToCart", "Orders")?id=' + @item.ID"> Add to Cart <i class="fa fa-shopping-cart"></i></button>
                            </div>
                        }
                    </div>
                    <p>@Html.DisplayFor(modelItem => item.Name)<br><b>@Html.DisplayFor(modelItem => item.price)</b></p>
                </div>
            </div>
        }

    </div>




</body>
</html>


